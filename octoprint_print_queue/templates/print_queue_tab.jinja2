<h2>{{ _('Print Queue') }}</h2>
<form class="form-horizontal">
    <div data-bind="foreach: queuedPrints">
        <div class="row-fluid" style="margin-bottom: 5px">
	    <div class="row-fluid" style="margin-bottom: 5px">
		<div class="span8">
		    <input type="text" class="span12 text-left" data-bind="value: fileName">
		</div>
		<div class="input offset1 span1">
		    <input type="number" step="any" min="1" class="input-mini text-right" data-bind="value: printNumber">
		</div>
		<div class="offset1 span1">
		    <a title="Remove profile" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
		</div>
	    </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset11 span2">
            <a title="Add File" class="btn btn-primary" data-bind="click: addSelectedFile"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <br/>
    <div>
        <label class="control-label">{{ _('Bed Clearing Script') }}</label>
        <div class="controls">
            <div class="input">
                <textarea rows="8" class="block" data-bind="value: bedClearScript"></textarea>
            </div>
        </div>
    </div>
    <br/>
    <button class="btn btn-primary" data-bind="click: printContinuously">{{ _('Print') }}</button>
    <button class="btn" data-bind="click: update">{{ _('Update') }}</button>
</form>
